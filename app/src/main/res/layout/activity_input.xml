<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Input">

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/yellow"
        android:text="Simpan Buku"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Kembali"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/btnSimpan"
        app:layout_constraintTop_toBottomOf="@+id/btnSimpan" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-black"
        android:text="BookShelf"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="94dp"
        android:layout_height="23dp"
        android:autoSizeTextType="uniform"
        android:text="By Ayoboga"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="Tambah Buku!"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:id="@+id/textView8"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Nama Buku" />

        <EditText
            android:id="@+id/id_title"
            style="@style/inputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contoh. Dunia Shopie"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="false"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView9"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis" />

        <EditText
            android:id="@+id/id_author"
            style="@style/inputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contoh. Jostein Gaarder"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView10"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penerbit" />

        <EditText
            android:id="@+id/id_publisher"
            style="@style/inputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contoh. Mizan"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView11"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun Terbit" />

        <EditText
            android:id="@+id/id_year"
            style="@style/inputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contoh. 1999"
            android:inputType="number"
            android:minHeight="48dp" />

        <Switch
            android:id="@+id/id_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:buttonTint="@color/yellow"
            android:fontFamily="sans-serif-black"
            android:minHeight="48dp"
            android:showText="true"
            android:text="Selesai di baca?"
            android:textColor="@color/yellow"
            android:textColorHighlight="@color/yellowHint"
            android:textColorLink="@color/yellow"
            android:textOff="N"
            android:textOn="Y"
            android:thumbTint="@color/yellow" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>